{
  "name": "agent",
  "version": "0.1.7",
  "description": "",
  "main": "build/agent.js",
  "output": "agent.blob",
  "scripts": {
    "test": "jest tests/integration --outputDirectory=./test-results --json",
    "dev": "nodemon",
    "start": "npm run build && cross-env-shell NODE_ENV=production node build/agent.js ",
    "build": "esbuild ./src/index.ts --bundle --platform=node --outfile=build/agent.js --loader:.node=file",
    "build-docker": "tsc",
    "build-ncc": "ncc build  -o build/lib ./src/index.ts && pkg ./build/lib/index.js -t 'node18-macos-arm64' -o ./build/agent",
    "build-bun": "bun build ./src/index.ts --compile --outfile agentcli"
  },
  "author": "Squirrel Team",
  "license": "AGPL-3.0 license",
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "esbuild": "^0.23.1",
    "node-cron": "^3.0.3",
    "node-os-utils": "^1.3.7",
    "retry": "^0.13.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "targets": [
      "node18-macos-arm64"
    ],
    "outputPath": "dist"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^29.5.13",
    "@types/node-cron": "^3.0.11",
    "@types/node-os-utils": "^1.3.4",
    "@types/retry": "^0.12.5",
    "@types/node": "^22.7.4",
    "jest": "^29.7.0",
    "jest-mock": "^29.7.0",
    "nodemon": "^3.1.5",
    "ts-jest": "^29.2.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
