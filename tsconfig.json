{
  "compilerOptions": {
    "module": "NodeNext",
    "sourceMap": true,
    "outDir": "build",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true // Add this line to allow JS files
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.json", ".env", "typings.d.ts"] // Adjust include pattern for JS files
}
